//ques1
#include<iostream>
using namespace std;

int main(){
    int a[100],i,j,n,k;
  cout<<"Enter size of array "<<endl;
  cin>>n;
  cout<<"Enter the elements of the array "<<endl;
  for(i=0;i<n;i++){
    cin>>a[i];
  }
  cout<<"Enter the difference between 2 pairs "<<endl;
  cin>>k;
  int count=0;
  for(i=0;i<n;i++){
    for(j=i+1;j<n;j++){
      if(a[i]-a[j]==k || a[i]-a[j]==-k  ){
        count++;
      }
    }
  }
  cout<<"No of pairs whose absolute difference is k are "<<count<<endl;


}


//ques3
#include<iostream>
#include<cstring>
#include<string>
using namespace std;
string sortstr(string str) {
  int l = str.length();
  for (int i = 0; i < l - 1; i++) {
    for (int j = 0; j < l - i - 1; j++) {
      if (str[j] > str[j+1]) {
        swap(str[j],str[j+1]);
      }
    }
  }
  return str;
}

 int main(){
    string str1;
    string str2;
    cout<<"Enter string 1 "<<endl;
    getline(cin, str1);
    cout<<"Enter string 2 "<<endl;
    getline(cin, str2);

    str1=sortstr(str1);
    str2=sortstr(str2);
    if(str1==str2){
        cout<<"Both strings are anagrams";
    }
    else{
        cout<<"Strings are not anagrams";
    }

return 0;
 }

 //ques4
#include<iostream>

using namespace std;

int main(){
    int a[]={0,2,1,0,1,2,2};
    int n=sizeof(a)/sizeof(int);
    int low=0;
    int mid=0;
    int high=n-1;
    while(mid<=high){
        if(a[mid]==0){
            swap(a[mid],a[low]);
            mid++;
            low++;
        }
        else if(a[mid]==1){
            mid++;
        }
        else {
            swap(a[mid],a[high]);
            high--;
        }
    }
    for(int i=0;i<n;i++){
        cout<<a[i]<<" " ;
    }
}

//ques 5
#include<bits/stdc++.h>
using namespace std;

int main(){
    vector<int> a={0,1,2,4,5,2,6,7};
    for(int i=0;i<a.size();i++){
        if(a[i]==2){
            a.pop_back();
            a.insert(a.begin()+i+1,a[i]);
            i++;
        }
    }
    for(int i=0;i<a.size();i++){
        cout<<a[i]<<" ";
    }

}
