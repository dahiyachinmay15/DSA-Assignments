// QUES 1

#include<iostream>
using namespace std;

int main(){

    int arr[100];
    int i,choose,n,x,pos,found;

    while(1){
      cout<<"Menu:"<<endl;
      cout<<"1.Create\n 2.Display\n 3.Insert\n 4.Delete\n 5.Linear search\n 6.Exit\n "<<endl;
      cout<<"Enter your choice"<<endl;
      cin>>choose;
      
      switch(choose){
        case 1:
        cout<<"Enter size of array"<<endl;
        cin>>n;
        cout<<"Enter elements of the array "<<endl;
        for (i=0;i<n;i++){
          cin>>arr[i];
        }
        break;
        case 2:
        cout<<"Elements of the array are "<<endl;;
        for(i=0;i<n;i++){
          cout<<arr[i]<<endl;
        }
        break;
        case 3:
        cout<<"Enter the number you want to insert"<<endl;
        cin>>x;
        cout<<"Enter the position you want to insert the number at"<<endl;
        cin>>pos;
        for(i=n;i>pos-1;i--){
          arr[i]=arr[i-1];
           }
           arr[pos-1]=x;
           n++;
        break;
        case 4:
        cout<<"Enter the position to delete"<<endl;
        cin>>pos;
        for(i=pos-1;i<n-1;i++){
          arr[i]=arr[i+1];
        }
        n--;
        break;
        case 5:
        cout<<"Enter the number you want to search"<<endl;
        cin>>x;
        for(i=0;i<n;i++){
          if(arr[i]==x){
            found=i;
          }
        }
        cout<<"Number found at position "<<found+1<<endl;
      break;
      case 6:
      cout<<"Exiting"<<endl;
      return 0;
      break;
      default:
      cout<<"Invalid choice, please enter a valid choice"<<endl;

      }
    }
    
}

//Ques 2

#include<iostream>
using namespace std;

int main() {
  int arr[100];
  int n, i, j, k;

  cout<<"Enter size of array: "<<endl;
  cin>>n;
  cout<<"Enter elements:"<<endl;
  for (i = 0; i < n; i++) {
    cin>>arr[i];
  }

  for (i = 0; i < n; i++) {
    for (j = i + 1; j < n;) {
      if (arr[i] == arr[j]) {
        for (k = j; k < n - 1; k++) {
          arr[k] = arr[k + 1];
        }
        n--;
      } else {
        j++;
      }
    }
  }

  cout<<"Array after removing duplicate elements :"<<endl;
  
  for (i = 0; i < n; i++) {
    cout<< arr[i];
  }
  return 0;
}

