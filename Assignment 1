//a
#include<iostream>
using namespace std;

int main(){
    int arr[100];
    int n,i,temp;
    cout<<"Enter size of array"<<endl;
        cin>>n;
        cout<<"Enter elements of the array "<<endl;
        for (i=0;i<n;i++){
          cin>>arr[i];
        }
          for(i=0;i<n/2;i++){
            temp=arr[n-i-1];
            arr[n-i-1]=arr[i];
            arr[i]=temp;
              }
          cout<<"Reversed array"<<endl;
          for (i=0;i<n;i++){
          cout<<arr[i];
        }
          
}

//b
#include<iostream>
using namespace std;

int main(){
    int a[100][100],b[100][100],c[100][100];
    int r1,r2,c1,c2,i,j,k;

    cout<<"Enter the number of rows in first matrix"<<endl;
    cin>>r1;
    cout<<"Enter the number of coloumns in first matrix"<<endl;
    cin>>c1;
    cout<<"Enter the number of rows in second matrix"<<endl;
    cin>>r2;
    cout<<"Enter the number of columns in second matrix"<<endl;
    cin>>c2;

    if(c1!=r2){
        cout<<"Multiplication is not possible";
        return 0;
    }
    cout<<"Enter elements of first matrix";
    for(i=0;i<r1;i++){
        for(j=0;j<c1;j++){
            cin>>a[i][j];
        }
    }
    cout<<"Enter elements of second matrix";
    for(i=0;i<r2;i++){
        for(j=0;j<c2;j++){
            cin>>b[i][j];
        }
    }
    for(i=0;i<r1;i++){
        for(j=0;j<c2;j++){
            c[i][j]=0;
            for(k=0;k<c1;k++){
                c[i][j] += a[i][k] * b[k][j];
            }
        }
    }
    cout <<"Multiplication of both the matrix is"<<endl;
    for(i=0;i<r1;i++){
        for(j=0;j<c2;j++){
            cout<<c[i][j]<<endl;
        }
    }

}

//c

#include <iostream>
using namespace std;
int main(){

    int a[100][100],b[100][100];
    int i,j,r,c;
    cout<<"enter the number of rows"<<endl;
    cin>>r;
    cout<<"enter the number of columns"<<endl;
    cin>>c;
    
    cout<<"Provide the matrix elements:"<<endl;

  for (i = 0; i < r; i++) {
    for (j = 0; j < c; j++) {
      cin>>a[i][j];
    }
  }
  for (i = 0; i < r; i++) {
    for (j = 0; j < c; j++) {
      b[j][i] = a[i][j];
    }
  }
cout<<"Transposed matrix:"<<endl;
  for (j = 0; j < c; j++) {
    for (i = 0; i < r; i++) {
      cout<< b[j][i];
    }
 cout<<"\n";
}
}

//Ques 5

#include <iostream>
using namespace std;

int main() {
  int matrix[10][10], rows, cols;
  int i, j, sum;

  cout<<"Enter number of rows and columns: "<<endl;
cin>>rows>>cols;

  cout<<"Input the matrix elements";
  for (i = 0; i < rows; i++) {
    for (j = 0; j < cols; j++) {
      cin>>matrix[i][j];
    }
  }

  cout<<"Sum of elements in each row:"<<endl;;
  for (i = 0; i < rows; i++) {
    sum = 0;
    for (j = 0; j < cols; j++) {
      sum += matrix[i][j];
    }
    cout<<"Sum of row "<<i+1<<" is " << sum<<endl;
  }

  cout<<"Sum of elements in each column"<<endl;
  for (j = 0; j < cols; j++) {
    sum = 0;
    for (i = 0; i < rows; i++) {
      sum += matrix[i][j];
    }
    cout<<"Sum of column"<<j+1<< "is "<< sum<<endl;
  }

  
}
