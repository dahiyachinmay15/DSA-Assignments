int main(){

    int arr[100];
    int i,n,x,found;
    cout<<"Enter size of array"<<endl;
        cin>>n;
        cout<<"Enter elements of sorted array "<<endl;
        for (i=0;i<n;i++){
          cin>>arr[i];
        }
cout<<"Enter the number you want to search"<<endl;
        cin>>x;
        for(i=0;i<n;i++){
          if(arr[i]==x){
            found=i;
          }
        }
        cout<<"Number found at position "<<found+1<<endl;
    }

