//QUES1
//Binary search
#include<iostream>
using namespace std;
int main(){

    int a[100];
    int n,i,x;
    
    cout<<"Enter array size"<<endl;
    cin>>n;
    cout<<"Enter sorted array"<<endl;
    for(i=0;i<n;i++){
    cin>>a[i];
    }
    cout<<"Enter the value you want to search"<<endl;
    cin>>x;
    int beg=0;
    int end=n-1,mid;
    int found=-1;
    while(beg<=end){
        mid=(beg+end)/2;
        if(a[mid]==x){
            found=mid;
            break;
        }
        else if (a[mid]<x){
            beg=mid+1;
        }
        else{
            end=mid-1;
        }

    }
    if(found>-1){
        cout<<"Element is found at index: "<<found<<endl;

    }
    else{
        cout<<"Not found"<<endl;
    }
    
}

//Ques 2

#include<iostream>
using namespace std;
int main(){
    int n=7;
    int a[n]={64,34,25,12,22,11,90},i,j;
    cout<<"Matrix before sorting is :"<<endl;
    for(i=0;i<n;i++){
    cout<<a[i]<<endl;
    }
    for(int i=0;i<n-1;i++){
    for(int j=0;j<n-i-1;j++){
         if (a[j]>a[j+1]){
             int t=a[j];
             a[j]=a[j+1];
             a[j+1]=t;
         }
     }
 }
 cout<<"Array after sorting is"<<endl;
  for(i=0;i<n;i++){
    cout<<a[i]<<endl;
    }
 

}

