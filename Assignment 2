#include<iostream>
using namespace std;
int main(){

    int a[100];
    int n,i,x;
    
    cout<<"Enter array size"<<endl;
    cin>>n;
    cout<<"Enter sorted array"<<endl;
    for(i=0;i<n;i++){
    cin>>a[i];
    }
    cout<<"Enter the value you want to search"<<endl;
    cin>>x;
    int beg=0;
    int end=n-1,mid;
    int found=-1;
    while(beg<=end){
        mid=(beg+end)/2;
        if(a[mid]==x){
            found=mid;
            break;
        }
        else if (a[mid]<x){
            beg=mid+1;
        }
        else{
            end=mid-1;
        }

    }
    if(found>-1){
        cout<<"Element is found at index: "<<found<<endl;

    }
    else{
        cout<<"Not found"<<endl;
    }
    
} 

//Ques 4

#include<iostream>
#include<string>
#include<cstring>
using namespace std;

void concat(char str1[], char str2[]){
    
   int l1= strlen(str1);
   int l2= strlen(str2);
   for(int i=0;i<l2;i++){
    str1[l1]=str2[i];
    l1++;
   }
   str1[l1]='\0';
}

void reverse(char str1[]){

  int n=strlen(str1);
    
    for(int i=0;i<n/2;i++){
           int temp=str1[n-i-1];
            str1[n-i-1]=str1[i];
            str1[i]=temp;
}
}

void delvowels( char str1[]){ //ERROR CODE NOT WORKING
    int n=strlen(str1);
    for(int i=0;i<n;i++){
        if(str1[i]== 'a'||'e'||'i'||'o'||'u'||'A'||'E'||'I'||'O'||'U'){
            str1[i]=str1[i+1];
        }
    }
}

void sortstr(char str[]) {
  int l = strlen(str);
  for (int i = 0; i < l - 1; i++) {
    for (int j = 0; j < l - i - 1; j++) {
      if (str[j] > str[j+1]) {
        char temp = str[j];
        str[j] = str[j+1];
        str[j+1] = temp;
      }
    }
  }
}

